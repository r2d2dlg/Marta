<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Marta" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/purple_40</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_90</item>
        <item name="colorOnPrimaryContainer">@color/purple_10</item>
        
        <!-- Secondary color -->
        <item name="colorSecondary">@color/dark_blue_40</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/dark_blue_90</item>
        <item name="colorOnSecondaryContainer">@color/dark_blue_10</item>
        
        <!-- Tertiary color -->
        <item name="colorTertiary">@color/teal_40</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/teal_90</item>
        <item name="colorOnTertiaryContainer">@color/teal_10</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/grey_99</item>
        <item name="android:colorBackground">@color/grey_99</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/grey_99</item>
        <item name="colorOnSurface">@color/grey_10</item>
        <item name="colorSurfaceVariant">@color/dark_blue_grey_90</item>
        <item name="colorOnSurfaceVariant">@color/dark_blue_grey_30</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/red_40</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/red_90</item>
        <item name="colorOnErrorContainer">@color/red_10</item>
        
        <!-- Enable edge-to-edge display -->
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
